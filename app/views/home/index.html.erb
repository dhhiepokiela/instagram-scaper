<%= form_for :search, url: '', method: :get do |f| %>
  <div class="row">
    <div class="form-group mx-sm-10 mb-10">
      <%= f.text_field :phones, value: @search_form[:phones], class: "form-control", placeholder: 'Enter phone numbers' %>
    </div>
    <div class="form-group mx-sm-3 mb-2">
      <input type="submit" name='submit' class='btn btn-primary btn-small'>
    </div>
  </div>
<% end %>

<% if @results && @results.any? %>
  <br><br>
  <table class="table">
    <thead>
      <tr>
        <td>Avatar</td>
        <td>Phone number</td>
        <td>Name</td>
        <td>Gender</td>
        <td>Birth Day</td>
      </tr>
    </thead>
    <tbody>
      <% @results.each do |result| %>
        <tr>
          <td><img src="<%= result[:avatar] %>" alt=""></td>
          <td><%= result[:phone] %></td>
          <td><%= result[:name] %></td>
          <td><%= result[:gender] %></td>
          <td><%= result[:birth_day] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
